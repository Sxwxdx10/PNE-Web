@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Déconnexion réussie";
}

<div class="container mt-5 text-center fade-in">
    <h1 class="display-4 mb-4">Déconnexion réussie</h1>
    <p class="lead">Vous avez été déconnecté avec succès.</p>

    <div class="mt-4">
        <a class="btn btn-outline-primary me-3" asp-controller="Authentification" asp-action="Login">
            <i class="bi bi-box-arrow-in-right"></i> Se reconnecter
        </a>
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">
            <i class="bi bi-house-door"></i> Retour à l'accueil
        </a>
    </div>
</div>
