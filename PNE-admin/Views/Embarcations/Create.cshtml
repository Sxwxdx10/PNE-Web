@model PNE_core.Models.Embarcation

@{
    ViewData["Title"] = "Ajouter une embarcation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-light">
        <h2 class="mb-0">Ajouter une embarcation</h2>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="IdEmbarcation" class="form-label">ID Embarcation</label>
                <input asp-for="IdEmbarcation" class="form-control" placeholder="Entrez l'ID de l'embarcation" />
                <span asp-validation-for="IdEmbarcation" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control" placeholder="Entrez la description" />
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Marque" class="form-label">Marque</label>
                <input asp-for="Marque" class="form-control" placeholder="Entrez la marque" />
                <span asp-validation-for="Marque" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Longueur" class="form-label">Longueur (mètres)</label>
                <input asp-for="Longueur" class="form-control" type="number" step="0.1" placeholder="Entrez la longueur" />
                <span asp-validation-for="Longueur" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Photo" class="form-label">URL de la photo</label>
                <input asp-for="Photo" class="form-control" placeholder="Entrez l'URL de la photo" />
                <span asp-validation-for="Photo" class="text-danger small"></span>
            </div>

            <div class="form-group mb-5">
                <label asp-for="codeQR" class="form-label">Code QR</label>
                <input asp-for="codeQR" class="form-control" placeholder="Entrez le code QR" />
                <span asp-validation-for="codeQR" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-outline-secondary">Retour à la liste</a>
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}