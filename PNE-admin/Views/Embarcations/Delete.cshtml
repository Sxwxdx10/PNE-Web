@model PNE_core.Models.Embarcation

@{
    ViewData["Title"] = "Suppression d'une embarcation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="text-danger mb-4">⚠️ Suppression d'une embarcation</h2>

    <div class="alert alert-warning shadow-sm p-4">
        <h5 class="mb-3">Es-tu sûr de vouloir supprimer cette embarcation ? Cette action est <strong>définitive</strong>.</h5>
        <dl class="row">
            <dt class="col-sm-4 fw-bold">Description :</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-4 fw-bold">Marque :</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Marque)</dd>

            <dt class="col-sm-4 fw-bold">Longueur :</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Longueur)</dd>

            <dt class="col-sm-4 fw-bold">Photo :</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Photo)</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="IdEmbarcation" />

        <div class="d-flex gap-3">
            <input type="submit" value="🗑 Supprimer" class="btn btn-danger px-4" />
            <a asp-action="Index" class="btn btn-secondary">⬅ Annuler</a>
        </div>
    </form>
</div>
