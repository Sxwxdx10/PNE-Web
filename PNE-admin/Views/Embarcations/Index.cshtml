@model IEnumerable<PNE_core.Models.Embarcation>

@{
    ViewData["Title"] = "Liste des embarcations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Liste des embarcations</h2>
    <a asp-action="Create" class="btn text-white" style="background-color: #198754; border-color: #198754;">
        <i class="bi bi-plus-circle"></i> Nouvelle embarcation
    </a>
</div>

<table class="table table-hover table-bordered shadow-sm bg-white">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Marque)</th>
            <th>@Html.DisplayNameFor(model => model.Longueur)</th>
            <th>@Html.DisplayNameFor(model => model.Photo)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Marque)</td>
                <td>@Html.DisplayFor(modelItem => item.Longueur) m</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Photo))
                    {
                        <img src="@item.Photo" alt="Photo" style="width: 80px; height: auto; border-radius: 4px;" />
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Aucune image</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
