@model IEnumerable<PNE_core.Models.StationLavage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Liste des stations de lavage</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                Plan d'eau
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeutDecontaminer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HautePression)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BassePressionetAttaches)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EauChaude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StationPersonnelStatus)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @(item.planeau != null ? item.planeau.Nom : "Non assigné")
                </td>
                <td>
                    @(item.PeutDecontaminer == true ? "Oui" : "Non")
                </td>
                <td>
                    @(item.HautePression == true ? "Oui" : "Non")
                </td>
                <td>
                    @(item.BassePressionetAttaches == true ? "Oui" : "Non")
                </td>
                <td>
                    @(item.EauChaude == true ? "Oui" : "Non")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StationPersonnelStatus)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-info-circle"></i> Détails
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Supprimer
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

