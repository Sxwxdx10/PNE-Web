@model IEnumerable<PNE_core.Models.Utilisateur>
@{
    ViewData["Title"] = "Utilisateurs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-users">
    <div class="header-users">
        <h1>Liste des utilisateurs</h1>
        <a asp-action="Create" class="btn-create-user">
            Créer un utilisateur
        </a>
    </div>
    <div class="user-card">
        <div class="user-card-body">
            <table class="user-table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().DisplayName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().DateCreation)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.DisplayName)</td>
                            <td>
                                <span class="badge-date">
                                    @item.DateCreation.ToString("dd/MM/yyyy")
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="action-buttons">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-detail">Détails</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit">Modifier</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete">Supprimer</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    .container-users {
        padding: 20px;
    }

    .header-users {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .btn-create-user {
        border: 2px solid #3F796A;
        color: #3F796A;
        padding: 8px 14px;
        text-decoration: none;
        border-radius: 6px;
        font-weight: bold;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-create-user:hover {
            background-color: #3F796A;
            color: white;
        }

    .user-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

    .user-card-body {
        padding: 15px;
    }

    .user-table {
        width: 100%;
        border-collapse: collapse;
    }

        .user-table th, .user-table td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

    .text-center {
        text-align: center;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 8px;
    }

    .badge-date {
        background-color: #e0e7ff;
        color: #374151;
        padding: 4px 10px;
        border-radius: 5px;
        font-weight: bold;
    }

    .btn {
        padding: 6px 12px;
        text-decoration: none;
        border-radius: 6px;
        font-weight: bold;
        transition: background-color 0.3s, color 0.3s;
        border: 2px solid;
    }

    .btn-detail {
        border-color: #6c757d;
        color: #6c757d;
    }

    .btn-edit {
        border-color: #007bff;
        color: #007bff;
    }

    .btn-delete {
        border-color: #dc3545;
        color: #dc3545;
    }

    .btn-detail:hover {
        background-color: #6c757d;
        color: white;
    }

    .btn-edit:hover {
        background-color: #007bff;
        color: white;
    }

    .btn-delete:hover {
        background-color: #dc3545;
        color: white;
    }
</style>