@model PNE_core.Models.Utilisateur

@{
    ViewData["Title"] = "Détails de l'utilisateur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="user-container">
    <div class="user-header">
        <h2>Détails de l'utilisateur</h2>
    </div>

    <div class="user-info-card">
        <div class="user-info-body">
            <dl class="row">
                <dt class="col-sm-3 text-muted">Nom affiché</dt>
                <dd class="col-sm-9 mb-3">@Html.DisplayFor(model => model.DisplayName)</dd>
                <dt class="col-sm-3 text-muted">Date de création</dt>
                <dd class="col-sm-9">
                    <span class="user-badge">@Model.DateCreation.ToString("dd/MM/yyyy")</span>
                </dd>
            </dl>
        </div>
        <div class="user-actions d-flex justify-content-between">
            <a asp-action="Index" class="btn-secondary-outline">Retour à la liste</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-primary-outline">Modifier</a>
        </div>
    </div>
</div>

<style>
    .user-container {
        padding: 20px;
        max-width: 800px;
        margin: auto;
    }

    .user-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .user-info-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        background: white;
        padding: 30px;
    }

    .user-info-body dl {
        font-size: 18px;
    }

    .user-badge {
        background-color: #e0e7ff;
        color: #374151;
        padding: 8px 14px;
        border-radius: 8px;
        font-size: 16px;
    }

    .btn-secondary-outline, .btn-primary-outline {
        padding: 10px 18px;
        margin: 0 5px;
        text-decoration: none;
        border-radius: 10px;
        font-weight: bold;
        transition: all 0.3s;
        border: 2px solid;
        font-size: 16px;
    }

    .btn-secondary-outline {
        border-color: #6c757d;
        color: #6c757d;
    }

        .btn-secondary-outline:hover {
            background-color: #6c757d;
            color: white;
        }

    .btn-primary-outline {
        border-color: #007bff;
        color: #007bff;
    }

        .btn-primary-outline:hover {
            background-color: #007bff;
            color: white;
        }
</style>