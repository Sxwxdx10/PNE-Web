@model PNE_core.Models.Utilisateur

@{
    ViewData["Title"] = "Détails de l'utilisateur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-light">
        <h2 class="mb-0">Détails de l'utilisateur</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 text-muted">
                Nom affiché
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DisplayName)
            </dd>
            <dt class="col-sm-3 text-muted">
                Date de création
            </dt>
            <dd class="col-sm-9">
                <span class="badge" style="background-color: #e0e7ff; color: #374151;">
                    @Model.DateCreation.ToString("dd/MM/yyyy")
                </span>
            </dd>
        </dl>
    </div>
    <div class="card-footer bg-white d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">Retour à la liste</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Modifier</a>
    </div>
</div>
