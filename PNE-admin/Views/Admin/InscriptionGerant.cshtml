@model PNE_core.DTO.SignUpUserDTO

<div class="gerant-container">
    <div class="gerant-header">
        <h1>INSCRIRE UN GÉRANT DE PLAN D'EAU</h1>
        <p class="text-muted">Remplissez le formulaire ci-dessous pour créer un compte.</p>
    </div>

    <div class="gerant-card">
        <div class="gerant-card-body">
            <form asp-action="InscriptionGerant">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="@Model.Username" class="form-label">NOM D'UTILISATEUR</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input asp-for="@Model.Username" class="form-control" type="text" placeholder="Nom d'utilisateur" />
                    </div>
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Email" class="form-label">EMAIL</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="@Model.Email" class="form-control" type="email" placeholder="Email" />
                    </div>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Password" class="form-label">MOT DE PASSE</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="@Model.Password" class="form-control" type="password" placeholder="Mot de passe" />
                    </div>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.ConfirmPassword" class="form-label">CONFIRMER LE MOT DE PASSE</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" placeholder="Confirmer votre mot de passe" />
                    </div>
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">PLANS D'EAU</label>
                    <select name="SelectedPlanEaux" class="form-control" multiple>
                        @foreach (var planEau in ViewBag.PlanEaux)
                        {
                            <option value="@planEau.IdPlanEau">@planEau.Nom</option>
                        }
                    </select>
                    <small class="form-text text-muted">Maintenez Ctrl (ou Cmd sur Mac) pour sélectionner plusieurs plans d'eau</small>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-submit"> INSCRIRE</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .gerant-container {
        padding: 40px;
        max-width: 600px;
        margin: auto;
    }

    .gerant-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .gerant-header h1 {
            font-size: 1.8rem;
            font-weight: bold;
        }

    .gerant-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
        padding: 30px;
        background: #fff;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
    }

    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

    .btn-submit {
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: bold;
        transition: all 0.3s;
        background-color: #198754;
        color: white;
        border: none;
        font-size: 1.1rem;
    }

        .btn-submit:hover {
            background-color: #145c32;
        }
</style>
