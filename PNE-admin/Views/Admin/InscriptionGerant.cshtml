@model PNE_core.DTO.SignUpUserDTO

<div class="text-center mb-4">
    <h1 class="display-5 fw-bold">Inscrire un gérant de plan d'eau</h1>
    <p class="text-muted">Remplissez le formulaire ci-dessous pour créer un compte.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4">
            <div class="card-body">
                <form asp-action="InscriptionGerant">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="@Model.Username" class="form-label fw-bold">Nom d'utilisateur</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="@Model.Username" class="form-control" type="text" placeholder="Nom d'utilisateur" />
                        </div>
                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="@Model.Email" class="form-label fw-bold">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="@Model.Email" class="form-control" type="email" placeholder="Email" />
                        </div>
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="@Model.Password" class="form-label fw-bold">Mot de passe</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="@Model.Password" class="form-control" type="password" placeholder="Mot de passe" />
                        </div>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="@Model.ConfirmPassword" class="form-label fw-bold">Confirmer le mot de passe</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" placeholder="Confirmer votre mot de passe" />
                        </div>
                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg"><i class="bi bi-person-check"></i> Inscrire</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}