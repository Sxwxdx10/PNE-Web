@using NuGet.Protocol;

@{
    List<string> roles = Context.Session.GetString("userRoles").FromJson<List<string>>();
}

<div class="container mt-4 fade-in">
    <div class="alert alert-info d-flex justify-content-between align-items-center flex-wrap gap-2">
        @{
            string? userName = Context.Session.GetString("username");
        }
        <span>Bienvenue, <strong>@userName</strong> !</span>

        <div class="d-flex flex-wrap gap-2">
            @foreach (var role in roles)
            {
                <span class="role-badge bg-secondary text-white fw-semibold">@role</span>
            }
        </div>
    </div>






    <div class="text-center mb-5">
        <h1 class="display-4">Portail des utilisateurs connectés</h1>
    </div>

    @if (roles.Contains("admin"))
    {
        <div class="card mb-4 shadow fade-in">
            <div class="card-header bg-success text-white">
                <h4 class="my-0">Liens Administrateur</h4>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="bi bi-person-plus"></i> <a class="nav-link d-inline" asp-controller="Admin" asp-action="InscriptionGerant">Inscrire un gérant de plan d'eau</a></li>
                    <li><i class="bi bi-check2-circle"></i> <a class="nav-link d-inline" asp-controller="Admin" asp-action="ConfirmationEEE">Confirmer des EEE</a></li>
                    <li><i class="bi bi-water"></i> <a class="nav-link d-inline" asp-controller="Admin" asp-action="Planseau">Plans d'eau</a></li>
                    <li><i class="bi bi-journal-text"></i> <a class="nav-link d-inline" asp-controller="Admin" asp-action="FormationsCertifications">Formations et certifications</a></li>
                </ul>
            </div>
        </div>
    }

    @if (roles.Contains("chercheur"))
    {
        <div class="card mb-4 shadow fade-in">
            <div class="card-header bg-primary text-white">
                <h4 class="my-0">Liens Chercheur</h4>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="bi bi-bar-chart"></i> <a class="nav-link d-inline" asp-controller="Chercheur" asp-action="PlanEau">Statistiques des plans d'eau</a></li>
                    <li><i class="bi bi-geo-alt"></i> <a class="nav-link d-inline" asp-controller="Chercheur" asp-action="DeplacementsEmbarcations">Déplacements des embarcations</a></li>
                </ul>
            </div>
        </div>
    }

    @if (roles.Contains("gerant"))
    {
        <div class="card mb-4 shadow fade-in">
            <div class="card-header bg-warning text-dark">
                <h4 class="my-0">Liens Gérant</h4>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="bi bi-people"></i> <a class="nav-link d-inline" asp-controller="Gerant" asp-action="InscriptionEmployes">Mes employés</a></li>
                    <li><i class="bi bi-water"></i> <a class="nav-link d-inline" asp-controller="Gerant" asp-action="GestionPlanEau">Mon plan d'eau</a></li>
                    <li>
                        <i class="bi bi-upload"></i> <a class="nav-link d-inline" asp-controller="Gerant" asp-action="MiseAEau">Mise à l'eau</a>
                        @if (TempData["Erreur"] != null)
                        {
                            <div class="alert alert-danger mt-2">
                                @TempData["Erreur"]
                            </div>
                        }
                    </li>
                    <li><i class="bi bi-exclamation-triangle"></i> <a class="nav-link d-inline" asp-controller="Gerant" asp-action="SignalisationEEE">Signaler une EEE</a></li>
                    <li><i class="bi bi-bar-chart-line"></i> <a class="nav-link d-inline" asp-controller="Gerant" asp-action="Stats">Statistiques</a></li>
                </ul>
            </div>
        </div>
    }
</div>
